graph G {

    node [
        shape=box,      // Use a box shape
        width=.20,      // Set fixed width to 1 inch
        height=0.25,     // Set fixed height to 0.5 inches
        fixedsize=true  // Ensure the size is exactly as specified
    ];

    // Set the layout engine to neato
    layout=neato;
    // Optional: set a size for consistent scaling, e.g., 4x4 inches
    size="24,24!"; 

    // Define nodes with fixed positions (in inches by default)
    A [pos="1,1!" label=""];
    B [pos="13,1.5!" label=""];
    C [pos="12,3!" label=""];

    // Define edges
    A -- B;
    B -- C;
    C -- A;
}
